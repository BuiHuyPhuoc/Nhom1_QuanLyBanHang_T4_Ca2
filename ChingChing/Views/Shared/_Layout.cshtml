@{
    var user = Session["Email"] as ChingChing.Models.CUSTOMER;
    string getName = "";
    if (user != null) {
        string[] fullname = user.CUSNAME.Split(' ');
        getName = fullname[fullname.Length - 1];
    }

}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/style.css">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <title>Document</title>
</head>

<body>
    <div class="header">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    Miễn phí đổi trả trong 30 ngày
                </div>
                <div class="col-lg-4 header-right">

                    @if (user == null)
                    {
                        <a href="@Url.Action("Login", "Users")"><i class="bi bi-box-arrow-right"></i>Đăng nhập</a>
                        <a href="@Url.Action("SignUp","Users")" style="margin-left: 30px">Đăng ký ngay</a>
                    }
                    else
                    {
                        <div class="dropdown show">
                            <a href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span style="margin:auto 30px"><i class="bi bi-person-circle"></i>Welcome, @getName </span>
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" style="color:#000" href="@Url.Action("UserDetail", "Users")"><i class="bi bi-person-circle"></i>Thông tin</a>
                                <a class="dropdown-item" style="color:#000" href="@Url.Action("YourCart", "Cart")"><i class="bi bi-bag-heart"></i>Quản lý đơn hàng</a>
                                <a class="dropdown-item" style="color:#000" href="@Url.Action("Logout", "Users")"><i class="bi bi-box-arrow-right"></i>Đăng xuất</a>

                            </div>
                        </div>

                    }

                    @*@if (user != null)
                        {
                            @Html.Action("CartPartial", "Cart")
                        }
                        else
                        {
                            <a href="#" class="cart-icon"><span><i class="bi bi-cart2"></i></span></a>

                        }*@

                </div>
            </div>

        </div>
    </div>

    <div class="container-fluid nav">
        <div class="col-lg-2"></div>
        <div class="col-lg-7">
            <nav class="navbar navbar-expand-lg navbar-light">
                <a class="navbar-brand" href="@Url.Action("Index","Home")">
                    <img src="~/Images/logoheader.jpg" alt="" style="height: 75px; width: 100%;">
                </a>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","Home")">Trang chủ <span class="sr-only"></span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Products","Category")">Danh mục</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Giới thiệu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Tin tức</a>
                        </li>

                    </ul>

                </div>
            </nav>
        </div>
        <div class="col-lg-3 search-area">
            @using (Html.BeginForm("Search", "Category", FormMethod.Post, new { @class = "search-form" }))
            {
                <input type="search" placeholder="Search" name="inputSearch" aria-label="Search">
                <button class="btn" type="submit"><i class="bi bi-search"></i></button>
            }
        </div>

    </div>


    @RenderBody()

    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 footer-item">
                    <img src="~/Images/logo.jpg" alt="" style="max-width: 250px; max-height: 250px; width: 100%; height: 100%">
                    <p style="color: #fff; margin:20px 0">Khách hàng là trung tâm của mô hình kinh doanh độc đáo của chúng tôi, bao gồm cả thiết kế.</p>
                    <img src="~/Images/payment.png" alt="">
                </div>
                <div class="col-lg-3 footer-item">
                    <p>Hãy để lại thông tin liên hệ, chúng tôi sẽ liên hệ với bạn sớm nhất có thể</p>

                </div>
                <div class="col-lg-3 footer-item">
                    <h2>Về chúng tôi</h2>
                    <p>Liên hệ với chúng tôi</p>
                    <p>Phương thức thanh toán</p>
                    <p>Chính sách bảo mật</p>


                </div>
                <div class="col-lg-3 footer-item">CopyRight By Thuan Dung Kien Anh </div>
            </div>
        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
</body>

</html>