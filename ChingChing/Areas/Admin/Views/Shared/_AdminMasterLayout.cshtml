<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="~/Areas/Admin/Content/admin_style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="#" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="admin_container">
        <div class="navbar_admin">
            <div class="category_container">
                <a id="QLDonHang" href="@Url.Action("QLDonHang", "Admin")" class="menu_category">Đơn hàng</a>
                <a id="QLTaiKhoan" href="@Url.Action("QLTaiKhoan", "Admin")" class="menu_category">Tài khoản</a>
                <a id="QLHoaDon" href="@Url.Action("QLHoaDon", "Admin")" class="menu_category">Hóa đơn</a>
                <a id="QLSanPham" href="@Url.Action("QLSanPham", "Admin")" class="menu_category">Sản phẩm</a>
                <a id="QLLienHe" href="@Url.Action("QLLienHe", "Admin")" class="menu_category">Liên hệ</a>
                <a class="menu_category" href="@Url.Action("Logout", "Users", new { area = "" })">Thoát</a>
            </div>
        </div>
        <div class="content">
            @RenderBody()
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script type="text/javascript" defer>
        var element = document.getElementById("@ViewBag.Title");
        element.style.backgroundColor = "#CBE4DE";
        element.style.color = "#2C3333";
    </script>
</body>
</html>