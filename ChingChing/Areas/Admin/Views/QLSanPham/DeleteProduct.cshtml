<!-- Views/Admin/DeleteProduct.cshtml -->

@model ChingChing.Models.PRODUCT

@{
    ViewBag.Title = "Xóa Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminMasterLayout.cshtml";
}

<div class="container">
    <h2>Xác nhận xóa sản phẩm</h2>

    <p>Bạn có chắc chắn muốn xóa sản phẩm "@Model.NAMEPRO" không?</p>

    @using (Html.BeginForm("DeleteProductConfirmed", "QLSanPham", new { id = Model.IDPRO }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a href="@Url.Action("QLSanPham")">Quay lại</a>
    }
</div>